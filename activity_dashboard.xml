<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Rooms Today"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>

        <!-- ================= DELUXE ROOM ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_deluxe"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/img_2"
                android:contentDescription="Deluxe Room"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deluxe Room"
                android:textColor="@color/emerald_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Bed • 1 Bath"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKR 6,000 / night"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= EXECUTIVE ROOM ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_executive"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/img_3"
                android:contentDescription="Executive Room"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Executive Room"
                android:textColor="@color/emerald_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Beds • 1 Bath"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKR 9,000 / night"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= LUXURY SUITE ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_luxury"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/img_4"
                android:contentDescription="Luxury Suite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luxury Suite"
                android:textColor="@color/emerald_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Beds • 2 Baths"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKR 18,000 / night"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- SEARCH BUTTON -->
        <Button
            android:id="@+id/btn_dashboard_search"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#273923"
            android:text="Not Today? Then Search!"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>