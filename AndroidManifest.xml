<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet access (online payment / future API) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Emrald_Villas"
        tools:targetApi="31">

        <!-- Launcher / Entry Screen -->
        <activity
            android:name=".ui.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name=".ui.SignupActivity"/>
        <activity android:name=".ui.LoginActivity"/>

        <!-- Main Dashboard -->
        <activity android:name=".ui.DashboardActivity"/>

        <!-- Room Search Flow -->
        <activity android:name=".ui.SearchActivity"/>
        <activity android:name=".ui.ResultActivity"/>
        <activity android:name=".ui.BookingActivity"/>

        <!-- Payment Flow -->
        <activity android:name=".ui.PaymentMethodActivity"/>
        <activity android:name=".ui.OnlinePaymentActivity"/>
        <activity android:name=".ui.PaymentSuccessActivity"/>
        <activity android:name=".ui.BookingSuccessActivity"/>

    </application>

</manifest>